---
# yamllint disable rule:line-length
name: fuse
pattern: |
  ⟦
    φ ↦ Φ.hone.distill,
    class ↦ 𝑒-class,
    bridge-input ↦ 𝑒-bridge-input,
    bridge-output ↦ 𝑒-bridge-output,
    accepted ↦ 𝑒-accepted,
    returned ↦ 𝑒-returned,
    body ↦ ⟦ 𝐵-body, ρ ↦ ∅ ⟧
  ⟧
result: |
  ⟦
    φ ↦ Φ.hone.distill,
    class ↦ 𝑒-class,
    bridge-input ↦ 𝑒-bridge-input,
    bridge-output ↦ 𝑒-bridge-output,
    accepted ↦ 𝑒-accepted,
    returned ↦ 𝑒-bridge-output,
    body ↦ ⟦
      𝐵-body,
      i-transform ↦ ⟦
        φ ↦ Φ.jeo.opcode.invokestatic,
        i2 ↦ 𝑒-transform-class,
        i3 ↦ "valueOf",
        i4 ↦ 𝑒-transform-signature,
        i5 ↦ Φ̇.false
      ⟧,
      ρ ↦ ∅
    ⟧
  ⟧
when:
  matches:
    - '^[BCDFIJSZ]$'
    - 𝑒-returned
where:
  - meta: 𝑒-transform-class
    function: sed
    args:
      - 𝑒-bridge-output
      - '"s/L(.+);/$1/g"'
  - meta: 𝑒-transform-signature
    function: concat
    args: ['"("', 𝑒-returned, '")"', 𝑒-bridge-output]
